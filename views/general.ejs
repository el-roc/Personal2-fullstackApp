        </div>
        <div class="col-sm-6">
          <h3>All Jokes "Inside"</h3>
          <h4>Click the Thumb Up Icon to Save your Favorite Jokes!</h4>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].feeling %></span>
              
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i id="noClass" aria-hidden="true"></i></span>
            
              <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="JOKES" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>
        <a href="/profile"> <button id="toProfile">To Your Jokes Page</button> </a>
        <a href="/saved"> <button id="toSave">To Favorite Jokes Page</button> </a>

</div>

<script src="main.js"></script>

